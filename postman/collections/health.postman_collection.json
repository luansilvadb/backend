{
  "info": {
    "name": "Health",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Endpoints de monitoramento e status da aplicação"
  },
  "item": [
    {
      "name": "Status da Aplicação",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/health", "host": ["{{baseUrl}}"], "path": ["api", "health"] }
      }
    },
    {
      "name": "Status Detalhado",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/health/detailed", "host": ["{{baseUrl}}"], "path": ["api", "health", "detailed"] }
      }
    }
  ]
}